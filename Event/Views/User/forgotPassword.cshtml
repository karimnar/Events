

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>forgotPassword</title>
    <link href="~/Content/style1.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    <style>

        .fp{
            margin-top:100px;
            margin-bottom:20%;
            margin-left:30%
        }


    </style>
</head>
<body>
    <div class="text-center fp">
    <div class="col-lg-4 col-md-4 mb-5 ml-5 mr-5 mt-5 Se-connecter ">
        @using (Html.BeginForm("recoverPassword", "User"))
        {
            @Html.AntiForgeryToken()

           
               
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label">Votre mail ou numéro</label>

              

                        <input type="text" class="form-control" name="credentials" />
                    </div>
                




               

                    <div class="col-md-10">
                        @ViewBag.ErrorMessage
                    </div>
         


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <center><button type="submit" class="btn-valide my-4">rechercher</button></center>
                    </div>
                </div>
         
        }
        </div>
        </div>
</body>
</html>
