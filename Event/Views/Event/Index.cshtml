@model IEnumerable<Model.Event>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>


    @foreach (var eve in Model){


    

        <div class="box">
            
                
               <a href="@Url.Action("Details","Event",new { id=eve.idEvent})"><img src="@Url.Content("~/Content/eventpics/id"+@eve.idEvent+"im1.jpg")" /></a>
                
                    
                <div class="desc col">
                    <a href="@Url.Action("Details","Event",new { id=eve.idEvent})"><span>@eve.EventTitle</span></a><br/>
                    @eve.EventDate.ToString("ddd"), @eve.EventDate.ToString("MMM") @eve.EventDate.Day<br/>
                    @eve.EventLocation<br/>

                </div>
                <div class="date col">
                    <p class="juin">@eve.EventDate.ToString("MMMM")</p>
                    <p class="num">@eve.EventDate.Day</p>
                </div>
                <ul>
                    <li><a href="#"><i class="fa fa-share" ></i></a></li>
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                </ul>
                
                     </div>

}       


</body>
</html>
