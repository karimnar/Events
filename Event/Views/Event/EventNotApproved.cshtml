@model IEnumerable<Model.Event>

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}


<body>
   
    <table class="table">
        <tr>
            <th>
                Titre
            </th>
            <th> Date de création</th>
            <th> Date de l'évenement</th>
            <th> Lieu</th>
            <th></th>

        </tr>  
    
    @foreach (var item in Model) {
        <tr>
            <td>
              <a href="@Url.Action("Details", "Event", new { id=item.idEvent })">@Html.DisplayFor(modelItem => item.EventTitle)</a>
            </td>
           
            
            <td>
                @{var cdate = item.CreationDate.ToString("MM/dd/yyyy");}
                @Html.DisplayFor(modelItem => cdate)
            </td>
            <td>
                @{var edate = item.EventDate.ToString("MM/dd/yyyy");}
                @Html.DisplayFor(modelItem => edate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventLocation)
            </td>
           
            <td>
                @Html.ActionLink("approuve", "AcceptAnnonce", new { id = item.idEvent }, new { @class = "btn cur-p btn-outline-primary" }) |
                @Html.ActionLink("Delete", "RefuseEvent", new { id=item.idEvent }, new { @class = "btn cur-p btn-outline-danger" })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
