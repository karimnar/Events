@model Model.Admin

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";}


<div class="row justify-content-center">
    <div class="col-sm-6 mainContentWrapper">
        <div class="well">
            <h2 class="card-header info-color white-text text-center py-4">Edit Profile</h2>

            @using (Html.BeginForm("Edit","Admin",FormMethod.Post))
            {
                @Html.AntiForgeryToken()


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.idAdmin)

                <div class="form-group">
                    @Html.LabelFor(model => model.nameAdmin, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.nameAdmin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nameAdmin, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.mailAdmin, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.mailAdmin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.mailAdmin, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.passwordAdmin, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.passwordAdmin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.passwordAdmin, "", new { @class = "text-danger" })

                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn cur-p btn-outline-primary btn-rounded waves-effect" />
                    </div>
                </div>

            }
           
        </div>
        </div>
    </div>
           

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
