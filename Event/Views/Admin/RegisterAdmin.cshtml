@model Model.Admin

@{
    ViewBag.Title = "Add Admin";
    Layout= "~/Views/Shared/Adminator.cshtml";
}


<div class="row justify-content-center">
    <div class="col-sm-6 mainContentWrapper">
        <div class="well">
            <h2 class="card-header info-color white-text text-center py-4">Admin</h2>
            @using (Html.BeginForm(new { @class = "text-cente" }))
            {
                @Html.AntiForgeryToken()

                <hr />



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.EditorFor(model => model.nameAdmin, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                    @Html.ValidationMessageFor(model => model.nameAdmin, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">


                    @Html.EditorFor(model => model.mailAdmin, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.mailAdmin, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">

                    @Html.PasswordFor(model => model.passwordAdmin, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.passwordAdmin, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">


                    <input type="password" name="password" class="form-control" id="password" placeholder="Comfirm Password">
                    @ViewBag.ErrorMessage


                </div>




                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn cur-p btn-outline-primary btn-rounded waves-effect" />
                    </div>
                </div>

            }
        </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
