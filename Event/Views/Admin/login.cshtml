@model Model.Admin
@{
    ViewBag.Title = "login";
}
@{
    Layout = "";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />



<div class="wrapper">
    @using (Html.BeginForm("login", "Admin",FormMethod.Post, new { @class= "form-signin" }))
    {
        @Html.AntiForgeryToken()



        <h2 class="form-signin-heading">Please login</h2>
        <br/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
           
            
                @Html.EditorFor(model => model.mailAdmin, new { htmlAttributes = new { @class = "form-control",placeholder= "Email Address" } })
                @Html.ValidationMessageFor(model => model.mailAdmin, "", new { @class = "text-danger" })

        <br/>





                @Html.EditorFor(model => model.passwordAdmin, new { htmlAttributes = new { @class = "form-control", placeholder = "Password"  } })
                @Html.ValidationMessageFor(model => model.passwordAdmin, "", new { @class = "text-danger" })





        <br/>


                <input type="submit" value="login" class="btn btn-lg btn-primary btn-block" />
           
    }
    </div>
    


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

    